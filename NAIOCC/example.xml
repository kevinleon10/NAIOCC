<?xml version = "1.0" encoding = "UTF-8"?>
<beans>

    <bean     id = "persona"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Persona"
              scope="Prototype"
              lazy-generation="true">

        <attribute name="nombre" value="Josue"/>

        <constructor>

            <param type="boolean"
                   value="true"/>
            <param type="java.lang.String"
                   value="costarricense"/>
            <param type="int"
                   value="116760597"/>

        </constructor>

    </bean>

    <bean     id = "triangulo"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Triangle"
              scope="Singleton"
              lazy-generation="true"
                init = "init">

            <attribute name="a" ref="pointA"/>
            <attribute name="b" ref="pointB"/>
            <attribute name="c" ref="pointC"/>

    </bean>

    <bean     id = "pointA"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">

        <constructor>

            <param type="int"
                   value="2"/>
            <param type="int"
                   value="2"/>
            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   ref="pointB"/>

        </constructor>

        <attribute name="y" value="3"/>

    </bean>

    <bean     id = "pointB"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">

        <constructor>

            <param type="int"
                   value="5"/>
            <param type="int"
                   value="2"/>
            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   ref="pointC"/>


        </constructor>

        <attribute name="y" value="7"/>

    </bean>

    <bean     id = "pointC"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">

        <constructor>

            <param type="int"
                   value="9"/>
            <param type="int"
                   value="2"/>
            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   ref="pointA"/>


        </constructor>

        <attribute name="y" value="11"/>

    </bean>

    <annotationsClasses>
        <class path="com.ci1330.ecci.ucr.ac.cr.ejemplos.TestingAnnotations" />
    </annotationsClasses>
</beans>