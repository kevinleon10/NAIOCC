<?xml version = "1.0" encoding = "UTF-8"?>
<beans annotationsClass = "com.ci1330.ecci.ucr.ac.cr.readers.TestingAnnotations"
       init="defaultInitMethod"
       destroy="defaultDestroyMethod">

    <bean     id = "beanId"
              class = "package.path.class"
              scope="Singleton"
              init="methodName" destroy="methodName"
              lazy-generation="true"
              autowire="byName">

        <constructor>

            <param type="package.path.class"
                   index="1"
                   value="valor" />

        </constructor>

        <attribute name="nombreAttr"
                   ref="beanId" />

    </bean>

</beans>