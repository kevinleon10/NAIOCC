<?xml version = "1.0" encoding = "UTF-8"?>
<beans>

    <bean     id = "triangulo"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Triangle"
              scope="Singleton"
              lazy-generation="true">

        <constructor>

            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   index="0"
                    ref="pointA"/>
            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   index="1"
                   ref="pointB"/>
            <param type="com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
                   index="2"
                   ref="pointC"/>


        </constructor>

    </bean>

    <bean     id = "pointA"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">

    </bean>

    <bean     id = "pointB"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">

    </bean>

    <bean     id = "pointC"
              class = "com.ci1330.ecci.ucr.ac.cr.ejemplos.Point"
              scope="Singleton">


    </bean>

